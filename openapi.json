    "components": {
        "schemas": {
            "Coordenadas": {
                "type": "object",
                "properties": {
                    "lat": {
                        "type": "number",
                        "format": "double"
                    },
                    "lon": {
                        "type": "number",
                        "format": "double"
                    }
                },
                "required": [
                    "lat",
                    "lon"
                ]
            },
            "Linea": {
                "type": "object",
                "description": "Serializer simple para listar líneas.\nDevuelve: id, codigo, nombre y color (hex).",
                "properties": {
                    "id": {
                        "type": "integer",
                        "readOnly": true
                    },
                    "codigo": {
                        "type": "string",
                        "maxLength": 10
                    },
                    "nombre": {
                        "type": "string",
                        "maxLength": 100
                    },
                    "color": {
                        "type": "string",
                        "maxLength": 7
                    }
                },
                "required": [
                    "codigo",
                    "color",
                    "id"
                ]
            },
            "LineaTrayecto": {
                "type": "object",
                "properties": {
                    "codigo": {
                        "type": "string"
                    },
                    "nombre": {
                        "type": "string"
                    },
                    "sentido": {
                        "type": "integer"
                    }
                },
                "required": [
                    "codigo",
                    "nombre",
                    "sentido"
                ]
            },
            "PuntoRuta": {
                "type": "object",
                "properties": {
                    "orden": {
                        "type": "integer"
                    },
                    "latitud": {
                        "type": "string",
                        "format": "decimal",
                        "pattern": "^-?\\d{0,3}(?:\\.\\d{0,6})?$"
                    },
                    "longitud": {
                        "type": "string",
                        "format": "decimal",
                        "pattern": "^-?\\d{0,3}(?:\\.\\d{0,6})?$"
                    },
                    "descripcion": {
                        "type": "string"
                    },
                    "distancia_tramo": {
                        "type": "string",
                        "format": "decimal",
                        "pattern": "^-?\\d{0,8}(?:\\.\\d{0,2})?$"
                    },
                    "distancia_acumulada": {
                        "type": "string",
                        "format": "decimal",
                        "pattern": "^-?\\d{0,8}(?:\\.\\d{0,2})?$"
                    },
                    "tiempo_tramo": {
                        "type": "string",
                        "format": "decimal",
                        "pattern": "^-?\\d{0,4}(?:\\.\\d{0,2})?$"
                    },
                    "tiempo_acumulado": {
                        "type": "string",
                        "format": "decimal",
                        "pattern": "^-?\\d{0,4}(?:\\.\\d{0,2})?$"
                    }
                },
                "required": [
                    "descripcion",
                    "distancia_acumulada",
                    "distancia_tramo",
                    "latitud",
                    "longitud",
                    "orden",
                    "tiempo_acumulado",
                    "tiempo_tramo"
                ]
            },
            "PuntoRutaPlanificada": {
                "type": "object",
                "properties": {
                    "orden": {
                        "type": "integer"
                    },
                    "latitud": {
                        "type": "string",
                        "format": "decimal",
                        "pattern": "^-?\\d{0,3}(?:\\.\\d{0,6})?$"
                    },
                    "longitud": {
                        "type": "string",
                        "format": "decimal",
                        "pattern": "^-?\\d{0,3}(?:\\.\\d{0,6})?$"
                    },
                    "descripcion": {
                        "type": "string"
                    },
                    "distancia_tramo": {
                        "type": "string",
                        "format": "decimal",
                        "pattern": "^-?\\d{0,8}(?:\\.\\d{0,2})?$"
                    },
                    "distancia_acumulada": {
                        "type": "string",
                        "format": "decimal",
                        "pattern": "^-?\\d{0,8}(?:\\.\\d{0,2})?$"
                    },
                    "tiempo_tramo": {
                        "type": "string",
                        "format": "decimal",
                        "pattern": "^-?\\d{0,4}(?:\\.\\d{0,2})?$"
                    },
                    "tiempo_acumulado": {
                        "type": "string",
                        "format": "decimal",
                        "pattern": "^-?\\d{0,4}(?:\\.\\d{0,2})?$"
                    },
                    "linea_trasbordo": {
                        "type": "string",
                        "nullable": true,
                        "description": "Código de la línea a la que se hace trasbordo en este punto (o null si no hay trasbordo)."
                    }
                },
                "required": [
                    "descripcion",
                    "distancia_acumulada",
                    "distancia_tramo",
                    "latitud",
                    "linea_trasbordo",
                    "longitud",
                    "orden",
                    "tiempo_acumulado",
                    "tiempo_tramo"
                ]
            },
            "RutaConPuntos": {
                "type": "object",
                "properties": {
                    "linea_codigo": {
                        "type": "string"
                    },
                    "linea_nombre": {
                        "type": "string"
                    },
                    "sentido": {
                        "type": "integer"
                    },
                    "descripcion_ruta": {
                        "type": "string"
                    },
                    "distancia_total": {
                        "type": "string",
                        "format": "decimal",
                        "pattern": "^-?\\d{0,8}(?:\\.\\d{0,2})?$"
                    },
                    "tiempo_total": {
                        "type": "string",
                        "format": "decimal",
                        "pattern": "^-?\\d{0,4}(?:\\.\\d{0,2})?$"
                    },
                    "puntos": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/PuntoRuta"
                        }
                    }
                },
                "required": [
                    "descripcion_ruta",
                    "distancia_total",
                    "linea_codigo",
                    "linea_nombre",
                    "puntos",
                    "sentido",
                    "tiempo_total"
                ]
            },
            "RutaPlanRequest": {
                "type": "object",
                "properties": {
                    "inicio": {
                        "$ref": "#/components/schemas/Coordenadas"
                    },
                    "fin": {
                        "$ref": "#/components/schemas/Coordenadas"
                    }
                },
                "required": [
                    "fin",
                    "inicio"
                ]
            },
            "RutaPlanificada": {
                "type": "object",
                "properties": {
                    "lineas": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/LineaTrayecto"
                        }
                    },
                    "descripcion_ruta": {
                        "type": "string"
                    },
                    "distancia_total": {
                        "type": "string",
                        "format": "decimal",
                        "pattern": "^-?\\d{0,8}(?:\\.\\d{0,2})?$"
                    },
                    "tiempo_total": {
                        "type": "string",
                        "format": "decimal",
                        "pattern": "^-?\\d{0,4}(?:\\.\\d{0,2})?$"
                    },
                    "puntos": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/PuntoRutaPlanificada"
                        }
                    }
                },
                "required": [
                    "descripcion_ruta",
                    "distancia_total",
                    "lineas",
                    "puntos",
                    "tiempo_total"
                ]
            }
        },
        "securitySchemes": {
            "basicAuth": {
                "type": "http",
                "scheme": "basic"
            },
            "cookieAuth": {
                "type": "apiKey",
                "in": "cookie",
                "name": "sessionid"
            }
        }
    }
}